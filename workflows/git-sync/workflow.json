{
  "name": "Git Sync Workflow",
  "nodes": [
    {
      "parameters": {},
      "id": "manualTrigger",
      "name": "Manual Trigger",
      "type": "n8n-nodes-base.manualTrigger",
      "typeVersion": 1,
      "position": [300, 320]
    },
    {
      "parameters": {
        "triggerTimes": [
          {
            "mode": "everyX",
            "unit": "minutes",
            "value": 30
          }
        ]
      },
      "id": "cronTrigger",
      "name": "Scheduled Trigger",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [300, 500]
    },
    {
      "parameters": {
        "mode": "append"
      },
      "id": "triggerMerge",
      "name": "Trigger Merge",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 3.2,
      "position": [520, 410]
    },
    {
      "parameters": {
        "url": "https://api.github.com/repos/Oremus-Labs/ol-n8n/git/trees/main?recursive=1",
        "responseFormat": "json",
        "headerParametersUi": {
          "parameter": [
            {
              "name": "Accept",
              "value": "application/vnd.github+json"
            }
          ]
        },
        "options": {
          "onError": "continueRegularOutput"
        }
      },
      "id": "listRepoTree",
      "name": "List Repo Tree",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.3,
      "position": [740, 410]
    },
    {
      "parameters": {
        "functionCode": "const tree = $json.tree || [];\nconst workflows = tree\n  .filter(entry => entry.type === 'blob' && /^workflows\\/[^\\/]+\\/workflow\\.json$/.test(entry.path))\n  .map(entry => ({\n    path: entry.path,\n    rawUrl: `https://raw.githubusercontent.com/Oremus-Labs/ol-n8n/main/${entry.path}`\n  }));\nreturn workflows.map(item => ({ json: item }));"
      },
      "id": "selectWorkflows",
      "name": "Select Workflow Files",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1.3,
      "position": [980, 410]
    },
    {
      "parameters": {
        "url": "={{$json.rawUrl}}",
        "responseFormat": "json",
        "dataPropertyName": "workflow",
        "headerParametersUi": {
          "parameter": [
            {
              "name": "Accept",
              "value": "application/json"
            }
          ]
        },
        "options": {
          "onError": "continueRegularOutput"
        }
      },
      "id": "fetchWorkflow",
      "name": "Fetch Workflow JSON",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.3,
      "position": [1220, 410]
    },
    {
      "parameters": {
        "functionCode": "const workflow = $json.workflow ?? $json;\nconst path = $json.path || 'workflows/unknown/workflow.json';\nconst apiBase = ($env.N8N_API_URL || 'https://n8n.oremuslabs.app').replace(/\\/$/, '');\nconst hasId = typeof workflow.id === 'string' && workflow.id.trim() !== '';\nconst url = hasId ? `${apiBase}/rest/workflows/${workflow.id}` : `${apiBase}/rest/workflows`;\nreturn {\n  json: {\n    method: hasId ? 'PUT' : 'POST',\n    url,\n    body: workflow,\n    sourcePath: path,\n    workflowName: workflow.name || path.split('/')[1] || 'workflow'\n  }\n};"
      },
      "id": "prepareUpsert",
      "name": "Prepare Upsert Request",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1.3,
      "position": [1440, 410]
    },
    {
      "parameters": {
        "url": "={{$json.url}}",
        "responseFormat": "json",
        "jsonParameters": true,
        "headerParametersUi": {
          "parameter": [
            {
              "name": "X-N8N-API-KEY",
              "value": "={{$env.N8N_API_KEY}}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "bodyParametersJson": "={{JSON.stringify($json.body)}}",
        "requestMethod": "={{$json.method}}",
        "options": {
          "onError": "continueRegularOutput"
        }
      },
      "id": "upsertWorkflow",
      "name": "Upsert Workflow",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.3,
      "position": [1680, 410]
    }
  ],
  "connections": {
    "Manual Trigger": {
      "main": [
        [
          {
            "node": "Trigger Merge",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Scheduled Trigger": {
      "main": [
        [
          {
            "node": "Trigger Merge",
            "type": "main",
            "index": 1
          }
        ]
      ]
    },
    "Trigger Merge": {
      "main": [
        [
          {
            "node": "List Repo Tree",
            "type": "main",
